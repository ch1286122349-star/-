{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Launch Edge (Local File)",
      "request": "launch",
      "type": "msedge",
      "file": "${workspaceFolder}/index.html",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ]
}

